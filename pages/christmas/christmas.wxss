/* pages/christmas/christmas.wxss */

.main-content{
  width: 100%;
  background-color: #fff;
  position: relative;
}

.image-content{
  width: 300px;
  height: 300px;
  margin: auto;
}

.has-image, .no-image{
  width: 100%;
  height: 100%;
}

.has-image image{
  width: 100%;
  height: 100%;
}

.no-image{
  display: grid;
  align-items: center;
}

.wechat-avatar{
  color: #999;
  font-size: 28rpx;
  width: 100%;
  text-align: center;
  background-color: #fff;
  border: none;
}

.wechat-avatar::after{
  border: none;
}

.wechat-avatar .plus{
  font-size: 80rpx;
  border: 1px solid #999;
  border-radius: 8rpx;
  width: 100rpx;
  height: 100rpx;
  line-height: 80rpx;
  margin: 0 auto 20rpx;
}

.btn-content{
  padding-top: 30rpx;
}

.operate-btn{
  font-size: 30rpx;
}

.change-view{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

image.hat{
  width: 100%;
  height: 100%;
  position: absolute;
}

.close, .rotate{
  position: absolute;
}

.scroll-view{
  width: 100%;
  white-space: nowrap;
  padding: 10rpx 20rpx;
  height: 130rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.hat-img{
  width: 100rpx;
  height: 100rpx;
  margin: 0 10rpx;
  border: 1px solid #ddd;
}

.flex{
  display: flex;
}